{% block body %}
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Dashboard</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Agents</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->


<div class="container-fluid">
    <div class="box-header">
        <h3 class="box-title">
            <div class="btn-group">
                <button type="button" class="btn btn-block btn-success add_btn"><i
                        class="glyphicon glyphicon-save"></i>
                    Créer</button>
            </div>
        </h3>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card card-outline card-info">
                <div class="">
                    <div class="card-header">
                        <h3 class="card-title">Liste des agents</h3>
                    </div>

                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>N°</th>
                                <th>Nom</th>
                                <th>Prénom</th>
                                <th>Email</th>
                                <th>Postes</th>
                                <th>Fonctions</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="table-content">
                            {% for agent in  agents %}
                            <tr id="tr-{{agent.id}}">
                                <td>{{ loop.index }}</td>
                                <td>{{ agent.firstname }}</td>
                                <td>{{ agent.lastname }}</td>
                                <td>{{ agent.email }}</td>
                                <td>{{ agent.post }}</td>
                                <td>{{ agent.fonction }}</td>
                                <td>
                                    <a type="submit" id="btn-modify-{{agent.id}}"
                                        class="btn btn-success btn-sm">Modifier <i class="fa fa-edit"></i></a>
                                     <a type="submit" id="delete-{{agent.id}}" class="btn btn-danger btn-sm"  data-toggle="modal"
                                        data-target="#modal-danger">Supprimer 
                                        <i class="fa fa-trash"></i></a>

                                </td>
                            </tr>
                              <div class="modal fade" id="modal_delete_{{agent.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title text-uppercase" style="color:#ffff;" >{{agent.firstName}} {{agent.lastName}}</h5>
                                            <a href="#" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </a>
                                        </div>
                                        <div class="modal-body">
                                            <p>Voulez-vous vraiment supprimer {{agent.firstName}} {{agent.lastName}}? Toutes les données liées à ce agent seront définitivement supprimées!</p>
                                        </div>
                                        <div class="modal-footer">
                                            <a href="#" class="btn btn-secondary" data-dismiss="modal" style="color:#fff;">Annuler</a>
                                            <a id="btn-delete-{{agent.id}}" class="btn btn-danger" style="color:#fff;">Supprimer</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div id="modal_edit_{{agent.id}}" class="modal fade" id="form" tabindex="-1" role="dialog"
                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header border-bottom-0">
                                            <h5 class="modal-title text-center" id="exampleModalLabel">Modifier un agent</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        
                                        <div class="modal-body">
                                        <form id="edit_form_{{agent.id}}">
                                            <div class="row">
                                                <div class="col-md-6 col-sm-6 col-xs-6">
                                                    <div class="form-group">
                                                        <label for="firstname">Nom</label>
                                                        <input type="text" name="firstName" class="form-control" value="{{agent.firstName}}">
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-sm-6 col-xs-6">
                                                    <div class="form-group">
                                                        <label for="lastname">Prénom</label>
                                                        <input type="text" name="lastName" class="form-control" value="{{agent.lastName}}">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6 col-sm-6 col-xs-6">
                                                    <div class="form-group">
                                                        <label for="email">Email</label>
                                                     <input type="text" name="email" class="form-control" value="{{agent.email}}">
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-sm-6 col-xs-6">
                                                    <div class="form-group">
                                                        <label for="post">N° poste</label>
                                                     <input type="text" name="post" class="form-control" value="{{agent.post}}">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6 col-sm-6 col-xs-6">
                                                    <div class="form-group">
                                                        <label for="entity">Entité</label>
                                                         <select class="form-control" id="entity" name="entity">
                                                            {% for entity in entities %}
                                                             {% if entity.id == agent.entity.id %}
                                                             <option value="{{entity.id}}" selected>{{entity.name}}</option>
                                                             {% else %}
                                                             <option value="{{entity.id}}" >{{entity.name}}</option>
                                                               {% endif %}
                                                         {% endfor %}
                                                         </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-sm-6 col-xs-6">
                                                    <div class="form-group">
                                                        <label for="unit">Unité</label>
                                                          <select class="form-control" id="unit" name="unit">
                                                            {% for unit in units %}
                                                             {% if unit.id == agent.unit.id %}
                                                             <option value="{{unit.id}}" selected>{{unit.name}}</option>
                                                             {% else %}
                                                             <option value="{{unit.id}}" >{{unit.name}}</option>
                                                            {% endif %}
                                                         {% endfor %}
                                                         </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6 col-sm-6 col-xs-6">
                                                    <div class="form-group">
                                                        <label for="direction">Direction</label>
                                                        <select class="form-control" id="direction" name="direction">
                                                                {% for direction in directions %}
                                                                {% if direction.id == agent.direction.id %}
                                                                <option value="{{direction.id}}" selected>{{direction.name}}</option>
                                                                {% else %}
                                                                <option value="{{direction.id}}" >{{direction.name}}</option>
                                                                {% endif %}
                                                            {% endfor %}
                                                            </select>
                                                        </div>
                                                </div>
                                                <div class="col-md-6 col-sm-6 col-xs-6">
                                                    <div class="form-group">
                                                        <label for="department">Département</label>
                                                                <select class="form-control" id="department" name="department">
                                                                {% for department in departments %}
                                                                {% if department.id == agent.department.id %}
                                                                <option value="{{department.id}}" selected>{{department.name}}</option>
                                                                {% else %}
                                                                <option value="{{department.id}}" >{{department.name}}</option>
                                                                {% endif %}
                                                            {% endfor %}
                                                            </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12 col-sm-12 col-xs-12">
                                                    <div class="form-group">
                                                        <label for="fonction">Fonction</label>
                                                          <select class="form-control" id="fonction" name="fonction">
                                                                {% for fonction in fonctions %}
                                                                {% if fonction.id == agent.fonction.id %}
                                                                <option value="{{fonction.id}}" selected>{{fonction.name}}</option>
                                                                {% else %}
                                                                <option value="{{fonction.id}}" >{{fonction.name}}</option>
                                                                {% endif %}
                                                            {% endfor %}
                                                            </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <input type="hidden" name="agent" value="{{agent.id}}">
                                         </form>
                                        </div>
                                        <div class="modal-footer border-top-0 d-flex justify-content-center">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                                            <button type="submit" id="edit-btn-{{agent.id}}" class="btn btn-warning">Modifier</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </tbody>

                    </table>
                </div>
                <!-- /.card-body -->
            </div>
        </div>
    </div>
</div>
<!-- /.col-->
