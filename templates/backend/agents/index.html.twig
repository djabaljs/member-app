                            }}
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-6">
                        <div class="form-group">
                            <label for="department">Département</label>
                            {{ form_row(form.department, {attr:{'class':'form-control','placeholder':'Département' }})
                            }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="fonction">Fonction</label>
                            {{ form_row(form.fonction, {attr:{'class':'form-control','placeholder':'Service' }})
                            }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-top-0 d-flex justify-content-center">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                <button type="submit" class="btn btn-success register">Enregistrer</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
<script src=" {{ asset("js/validate.js") }}"></script>
<script src="{{ asset("js/sweetAlert.js") }}"></script>
<script>

    $.validator.setDefaults({
		errorClass: 'help-block',
		errorPlacement: function (error, element) {
			error.addClass("label");
			error.css("background", "red", );
			error.insertAfter(element.parent());
		},
		highlight: function (element, errorClass, validClass) {
			$(element).parents(".row").addClass(errorClass);
		},
		unhighlight: function (element, errorClass, validClass) {
			$(element).parent().next().remove();

		}
	});

    $.validator.setDefaults({
        debug: true,
        success: "valid"
    });


    $('.add_btn').click(function () {
        $('#modal_add').modal('show');
    })

    function modifyFunction(){
    $( "[id^='btn-modify']" ).click(function(){
        var str = $(this).attr("id");
        var subStr = str.substr(11, 12);
        $('#modal_edit_'+subStr).modal('show');
    })
    }


    function deleteFunction(){
    $( "[id^='delete-']" ).click(function(){
        var str = $(this).attr("id");
        var subStr = str.substr(7, 8);
       $('#modal_delete_'+subStr).modal('show');
    })
    }
    
    $.validator.setDefaults({
        debug: true,
        success: "valid"
    });

    $.validator.addMethod('emailExist', function (value, element) {

        $.post('{{ path("user-email", {email: "value"}) }}');
        return console.log(value)
    }, '');
    var content = '';
      $.validator.addMethod('postExist', function (value, element) {
         
         $.ajax({
                url: '{{ path("user_post") }}',
                method: 'POST',
                data: {'post': value},
                success: function (data) {
                   var response = '';
                    if(data.error){
                        console.log(data.error)
                        return data.error
                    }
                }
            })
    },'');

    var form = $('#add_form');

    form.validate({
        rules: {
            'firstName': {
                required: true
            },
            'lastName': {
                required: true
            },
            'post': {
                required: true,
                number: true,
                maxlength: 4,
                minlength: 4,
                postExist: true
            },
            'email': {
                required: true,
                email: true,
                emailExist: true
            },
            'fonction': {
                required: true,
            },
            'entity': {
                required: true,
            },
             'unit': {
                required: true,
            },
             'direction': {
                required: true,
            },
             'department': {
                required: true,
            },
             'fonction': {
                required: true,
            },

        },
        messages: {
            'firstName': {
                required: 'Nom obligatoire'
            },
            'lastName': {
                required: 'Prénom obligatoire'
            },
            'post': {
                required: 'N° post obligatoire',
                number: 'Entrer un nombre',
                maxlength: 'N° poste invalide',
                minlength: 'N° poste invalide',
                remote: $.validator.format("{0} est déjà associé à un compte")
            },
            'email': {
                required: 'Email obligatoire',
                email: 'Entrer un email valide',
                remote: $.validator.format("{0} est déjà associé à un agent")
            },
            'fonction': {
                required: 'Fonction obligatoire',
            },
            'entity': {
                required: 'Entité obligatoire',
            },
             'unit': {
                required: 'Unité obligatoire',
            },
             'direction': {
                required: 'Direction obligatoire',
            },
             'department': {
                required: 'Département obligatoire',
            },
             'fonction': {
                required: 'Fonction obligatoire',
            },

        }
    });
    function addElement(){
    $('.register').click(function (e) {
        e.preventDefault();
        console.log($('#add_form').valid());
        if ($('#add_form').valid()) {
            $.ajax({
                url: '{{ path("agents") }}',
                method: 'POST',
                data: $('#add_form').serialize(),
                success: function (response) {
                    if (response.agent) {
                        const Toast = Swal.mixin({
                            toast: true,
                            position: 'top',
                            showConfirmButton: false,
                            timer: 5000,
                            width: 300,
                            timerProgressBar: true,
                            onOpen: (toast) => {
                                toast.addEventListener('mouseenter', Swal.stopTimer)
                                toast.addEventListener('mouseleave', Swal.resumeTimer)
                            },

                        })

                         Toast.fire({
                            icon: 'success',
                            title: 'Agent ajouté avec succès'
                        });
                        $("#example1 tbody").
                        html(response.row);
                        
                        deleteFunction();
                        updateElement();
                        removeElement();
                        modifyFunction();
                        $('#add_form').trigger('reset');

                    }
                }
            })
        }
    })
    }

    function updateElement(){
    $("[id^=edit-btn]").click(function(){
        var str = $(this).attr("id");
        var id = str.substr(9, 10);
       
          if ($('#edit_form_'+id).valid()) {
            $.ajax({
                url: '{{ path("agents") }}',
                method: 'POST',
                data: $('#edit_form_'+id).serialize(),
                success: function (response) {
                    if (response.agent) {
                        const Toast = Swal.mixin({
                            toast: true,
                            position: 'top',
                            showConfirmButton: false,
                            timer: 5000,
                            width: 300,
                            timerProgressBar: true,
                            onOpen: (toast) => {
                                toast.addEventListener('mouseenter', Swal.stopTimer)
                                toast.addEventListener('mouseleave', Swal.resumeTimer)
                            },

                        })

                         Toast.fire({
                            icon: 'success',
                            title: 'Agent modifié avec succès'
                        });
                       $("#example1 tbody").
                        html(response.row);

                            deleteFunction();
                            addElement();
                            removeElement();
                            modifyFunction();

                    }
                }
            })
        }
    })
    }

    function removeElement(){
    $("[id^=btn-delete-]").click(function(){
        var str = $(this).attr("id");
        var subStr = str.substr(11, 12);
         
            $.ajax({
                url: '{{ path("agent_remove") }}',
                method: 'POST',
                data: {'agent': subStr},
                success: function (response) {
                    if (response.agent) {
                        const Toast = Swal.mixin({
                            toast: true,
                            position: 'top',
                            showConfirmButton: false,
                            timer: 5000,
                            width: 300,
                            timerProgressBar: true,
                            onOpen: (toast) => {
                                toast.addEventListener('mouseenter', Swal.stopTimer)
                                toast.addEventListener('mouseleave', Swal.resumeTimer)
                            },

                        })

                         Toast.fire({
                            icon: 'success',
                            title: 'Agent supprimé avec succès'
                        });
                        
                         $('#tr-'+response.agent).remove();
                    }
                }
            })
    })
    }


        $('[id^=entity]').change(function () {
        var unitSelector = $(this);
        
        $.ajax({
            url: "{{ path('get_units_from_entity') }}",
            type: "GET",
            dataType: "JSON",
            data: {
                entityId: unitSelector.val()
            },
            success: function (units) {
                var unitSelector = $("[id^=unit]");
                // Remove current options
                unitSelector.html('');
                
                // Empty value ...
                unitSelector.append('<option value> Selectionnner une unite de ' + unitSelector.find("option:selected").text() + ' ...</option>');
                
                
                $.each(units, function (key, unit) {
                    unitSelector.append('<option value="' + unit.id + '">' + unit.name + '</option>');
                });
            },
            error: function (err) {
                alert("An error ocurred while loading data ...");
            }
        });
    });


        $('[id^=unit]').change(function () {
        var directionSelector = $(this);
        
        // Request the neighborhoods of the selected city.
        $.ajax({
            url: "{{ path('get_directions_from_unit') }}",
            type: "GET",
            dataType: "JSON",
            data: {
                unitId: directionSelector.val()
            },
            success: function (directions) {
                var directionSelector = $("[id^=direction]");
              
                directionSelector.html(' ');    
                directionSelector.append('<option value> Selectionnner une direction de ' + directionSelector.find("option:selected").text() + ' ...</option>');
                
                
                $.each(directions, function (key, direction) {
                    directionSelector.append('<option value="' + direction.id + '">' + direction.name + '</option>');
                });
            },
            error: function (err) {
                alert("An error ocurred while loading data ...");
            }
        });
    });


         $('[id^=direction]').change(function () {
        var departmentSelector = $(this);
        $.ajax({
            url: "{{ path('get_departments_from_direction') }}",
            type: "GET",
            dataType: "JSON",
            data: {
                directionId: departmentSelector.val()
            },
            success: function (departments) {
                var departmentSelector = $("[id^=department]");

                // Remove current options
                departmentSelector.html('');
                
                // Empty value ...
                departmentSelector.append('<option value> Selectionnner un département de ' + departmentSelector.find("option:selected").text() + ' ...</option>');
                
                
                $.each(departments, function (key, department) {
                    departmentSelector.append('<option value="' + department.id + '">' + department.name + '</option>');
                });
            },
            error: function (err) {
                alert("An error ocurred while loading data ...");
            }
        });
        $('[id^=department]').change(function () {
        var serviceSelector = $(this);
          $.ajax({
            url: "{{ path('get_services_from_department') }}",
            type: "GET",
            dataType: "JSON",
            data: {
                departmentId: serviceSelector.val()
            },
            success: function (services) {
                var serviceSelector = $("[id^=fonction]");

                // Remove current options
                serviceSelector.html('');
                
                // Empty value ...
                serviceSelector.append('<option value> Selectionnner une fonction de ' + serviceSelector.find("option:selected").text() + ' ...</option>');
                
                $.each(services, function (key, service) {
                    serviceSelector.append('<option value="' + service.id + '">' + service.name + '</option>');
                });
            },
            error: function (err) {
                alert("An error ocurred while loading data ...");
            }
        });
        })
 
    });
    

    function group(){
    deleteFunction();
    addElement();
    updateElement();
    removeElement();
    modifyFunction();
    }

    group();

    
</script>
{% endblock %}