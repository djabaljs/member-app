{% extends 'base.html.twig' %}

{% block title %}Entity index{% endblock %}

{% block body %}
    <h1>Entity index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.name }}</td>
                <td>
                    <a href="{{ path('entity_show', {'id': entity.id}) }}">show</a>
                    <a href="{{ path('entity_edit', {'id': entity.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('entity_new') }}">Create new</a>
{% endblock %}
